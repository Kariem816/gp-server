{
  "name": "server",
  "version": "1.0.0",
  "description": "A node server to handle IoT requests",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"nodemon -x tsx ./src/index.ts --ignore ./client\" \"cd client && yarn dev\"",
    "prebuild": "yarn db:up",
    "build:translations": "node intl/build.js",
    "build:frontend": "cd client && yarn build && cd ..",
    "build:backend": "tsc && tsc-alias",
    "build": "yarn build:translations && yarn build:frontend && yarn build:backend",
    "start": "node dist/index.js",
    "preview": "cross-env NODE_ENV=production yarn start",
    "db:up": "prisma migrate dev",
    "db:down": "prisma migrate reset",
    "db:generate": "prisma generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.7",
    "@types/platform": "^1.3.6",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.2",
    "prisma": "^5.13.0",
    "tsc-alias": "^1.8.8",
    "tsx": "^3.14.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "axios": "^1.6.5",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "expo-server-sdk": "^3.7.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "platform": "^1.3.6",
    "uploadthing": "^6.10.3",
    "zod": "^3.22.4"
  }
}
