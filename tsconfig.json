{
    "compilerOptions": {
        "target": "ES2016",
        "module": "CommonJS",
        "paths": {
            "@/*": [
                "./src/*"
            ],
        },
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "Node",
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "client"
    ]
}