{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "moduleResolution": "Bundler"
    },
    "include": [
        "src",
        "client",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "client"
    ]
}