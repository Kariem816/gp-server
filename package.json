{
  "name": "server",
  "version": "1.0.0",
  "description": "A node server to handle IoT requests",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon -x tsx ./src/index.ts",
    "prebuild": "yarn db:up",
    "build:frontend": "cd client && vite build --outDir ../dist/client --emptyOutDir && cd ..",
    "build:backend": "tsc && tsc-alias",
    "build": "yarn build:frontend && yarn build:backend",
    "start": "node dist/index.js",
    "preview": "cross-env NODE_ENV=production yarn start",
    "db:up": "prisma migrate dev",
    "db:down": "prisma migrate reset",
    "db:generate": "prisma generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@mantine/core": "^7.4.1",
    "@mantine/form": "^7.4.1",
    "@mantine/hooks": "^7.4.1",
    "@tanstack/router-vite-plugin": "^1.3.3",
    "@types/bcrypt": "^5.0.1",
    "@types/cookie-parser": "^1.4.5",
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.7",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "axios": "^1.6.5",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.33",
    "postcss-preset-mantine": "^1.12.3",
    "postcss-simple-vars": "^7.0.1",
    "prisma": "^5.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsc-alias": "^1.8.8",
    "tsx": "^3.14.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@tanstack/react-router": "^1.3.3",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "uploadthing": "^6.0.4",
    "zod": "^3.22.4"
  }
}
