{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@client/*": [
        "./src/client/*"
      ],
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "moduleResolution": "Bundler"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}